<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.tomatofighter.TimerActivity"
    tools:showIn="@layout/activity_timer" >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <TextView
            android:id="@+id/remain_time"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/toolbarSize"
            android:layout_weight="3"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:gravity="center"
            android:orientation="horizontal">


            <ImageButton
                android:id="@+id/play_button"
                android:layout_width="@dimen/play_button_size"
                android:layout_height="@dimen/play_button_size"
                android:background="@android:drawable/ic_media_play"
                android:visibility="invisible"/>

            <!--<Space
                android:layout_width="@dimen/space_between_buttons"
                android:layout_height="wrap_content"
                />

            <Button
                android:id="@+id/reset_button"
                android:layout_width="@dimen/play_button_size"
                android:layout_height="@dimen/play_button_size"

                android:background="@android:drawable/ic_menu_resume"/>-->


        </LinearLayout>

        <ListView
            android:id="@+id/tasks"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"/>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>
