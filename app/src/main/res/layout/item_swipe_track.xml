<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout android:id="@+id/trackItem"
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="80dp">

    <RelativeLayout
        android:id="@+id/trackMain"
        android:layout_width="match_parent"
        android:layout_height="@dimen/playlist_height"
        android:layout_centerVertical="true">


        <TextView
            android:id="@+id/trackName"
            android:layout_width="@dimen/todo_editor_text_width"
            android:layout_height="@dimen/todo_editor_text_height"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/trackTime"
            android:layout_marginStart="8dp"
            android:background="@null"
            android:gravity="center"
            android:maxLines="1"
            android:singleLine="true"/>

        <TextView
            android:id="@+id/trackTime"
            android:layout_width="@dimen/todo_editor_time_width"
            android:layout_height="@dimen/todo_editor_text_height"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="8dp"
            android:background="@null"
            android:gravity="left|center_vertical"
            android:text="@string/default_time"
            android:textAlignment="center"/>


    </RelativeLayout>

</RelativeLayout>
