<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="80dp">

    <RelativeLayout
        android:id="@+id/trackItem"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="@dimen/timer_list_width"
        android:layout_height="@dimen/playlist_height"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/highlight">


        <TextView
            android:id="@+id/trackName"
            android:layout_width="@dimen/todo_editor_text_width"
            android:layout_height="@dimen/todo_editor_text_height"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="8dp"
            android:background="@null"
            android:gravity="left|center_vertical"
            android:textColor="@color/timer_list_color"
            />

        <TextView
            android:id="@+id/trackTime"
            android:layout_width="@dimen/todo_editor_time_width"
            android:layout_height="@dimen/todo_editor_text_height"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="8dp"
            android:background="@null"
            android:gravity="center"
            android:textColor="@color/timer_list_color"/>


    </RelativeLayout>
</RelativeLayout>