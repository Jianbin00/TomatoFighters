<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/trackItem"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/playlist_height"
    android:drawable="@drawable/highlight"
    android:paddingBottom="@dimen/playlist_margin_up_down"
    android:paddingTop="@dimen/playlist_margin_up_down">


    <TextView
        android:id="@+id/trackName"
        android:layout_width="@dimen/todo_editor_text_width"
        android:layout_height="@dimen/todo_editor_text_height"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="8dp"
        android:background="@null"
        android:gravity="left"
        android:textColor="@color/white"
        />


    <TextView
        android:id="@+id/trackTime"
        android:layout_width="@dimen/todo_editor_time_width"
        android:layout_height="@dimen/todo_editor_text_height"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="8dp"
        android:background="@null"
        android:textColor="@color/white"/>


</RelativeLayout>
